{
  "name": "nse-bse-trading-signals",
  "version": "1.0.0",
  "description": "NSE/BSE Nifty 50 stock analysis with buy/sell signals",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "ws": "^8.14.2",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "mongoose": "^8.0.0",
    "technicalindicators": "^3.1.0",
    "node-cron": "^3.0.2",
    "yahoo-finance2": "^2.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.2"
  }
}
